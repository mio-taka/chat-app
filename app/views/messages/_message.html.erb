<div class="message">
  <div class="message_top">
    <div class="message_user">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name%>
    </div>
    <div class="message_date">
      <!-- 投稿した時刻を出力する -->
       <%= l message.created_at %>
    </div>
  </div>
  <div class="lower-message">
    <div class="message_comment">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= message.content %>
    </div>
  </div>
</div>